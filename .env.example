# 模型配置
MODEL_PATH=/app/models/bert_scoring.onnx
TOKENIZER_PATH=/app/models/tokenizer
USE_GPU=false
LOG_LEVEL=info

# 监控配置
DEPLOYMENT=production
INSTANCE_ID=your_instance_id_here

# Sentry 错误追踪（可选，如不使用请留空）
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.0

# 心跳监控 Webhook URL（可选，如不使用请留空）
HEARTBEAT_URL=your_webhook_url_here
HEARTBEAT_INTERVAL=30

# Grafana 管理员账户（生产环境请务必修改默认密码）
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_admin_password_here
GF_USERS_ALLOW_SIGN_UP=false